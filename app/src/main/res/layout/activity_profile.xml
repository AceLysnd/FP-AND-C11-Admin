<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF2FF"
    tools:context=".ui.view.ProfileActivity">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="126dp"
        android:layout_height="153dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_profile_1"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:background="@drawable/round_border"
        android:backgroundTint="#ADADAD"
        android:textColor="#EEF2FF"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/change_profile_picture"
        app:layout_constraintEnd_toEndOf="@+id/img_profile"
        app:layout_constraintStart_toStartOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/img_profile" />

    <EditText
        android:id="@+id/edt_name_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/round_border"
        android:hint="Name"
        android:padding="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/txt_profile_1"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/txt_profile_1"
        app:layout_constraintTop_toBottomOf="@+id/txt_profile_1" />

    <EditText
        android:id="@+id/edt_nohp_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No. Handphone"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/round_border"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_name_profile"
        app:layout_constraintStart_toStartOf="@+id/edt_name_profile"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_profile" />

    <EditText
        android:id="@+id/edt_alamat_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:hint="Alamat"
        android:background="@drawable/round_border"
        android:padding="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/edt_nohp_profile"
        app:layout_constraintStart_toStartOf="@+id/edt_nohp_profile"
        app:layout_constraintTop_toBottomOf="@+id/edt_nohp_profile" />

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:text="Edit profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/edt_alamat_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_alamat_profile"
        app:layout_constraintTop_toBottomOf="@+id/edt_alamat_profile" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/btn_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile" />



</androidx.constraintlayout.widget.ConstraintLayout>